####################################################################################################
######################################### Program Name #############################################
####################################################################################################

NAME	= test_ft
NAME2	= test_std

####################################################################################################
######################################### Compiler #################################################
####################################################################################################

CC		= g++
CFLAGS	= -Wall -Wextra -std=c++98 -g -Werror

####################################################################################################
##################################### Include Folders ##############################################
####################################################################################################

INCLUDE =	$(addprefix -I ./includes, \
			/ \
			/0-Utilities \
			/1-Iterators \
			/3-map \
			)

####################################################################################################
######################################### Headers files ############################################
####################################################################################################

MAIN_HEADERS	= $(addprefix ./includes/, \
					ft_algorithm.hpp \
					ft_iterator_types.hpp \
					map.hpp \
					vector.hpp \
					)

UTILS_HEADERS	= $(addprefix ./includes/0-Utilities/, \
					Colors.hpp \
					testsVector.hpp \
					)

ITERATORS_HEADERS	= $(addprefix ./includes/1-Iterators/, \
					iterator_traits.hpp \
					IteratorVector.hpp \
					MapIterator.hpp \
					)

MAP_HEADERS	= $(addprefix ./includes/3-map/, \
				ft_pair.hpp \
				map.hpp \
				Node.hpp \
				Tree.hpp \
				)

####################################################################################################
########################################## Source files ############################################
####################################################################################################

SRC		= $(addprefix ./src/, \
          	main.cpp \
          	testsMap.cpp \
          	testsVector.cpp \
          	testsStack.cpp \
		  	)

####################################################################################################
########################################## Objects files ###########################################
####################################################################################################

%_ft.o: %.cpp
	$(CC) $(CFLAGS) $(INCLUDE) -c $< -o $(<:%.cpp=%_ft.o)

%_std.o: %.cpp
	$(CC) $(CFLAGS) $(INCLUDE) -DDEFAULT=1 -c $< -o $(<:%.cpp=%_std.o)

all: $(NAME) $(NAME2)

OBJ_FT	= $(SRC:%.cpp=%_ft.o)

OBJ_STD	= $(SRC:%.cpp=%_std.o)

$(NAME): $(OBJ_FT)
	$(CC) $(CFLAGS) $(OBJ_FT) -o $(NAME)

$(NAME2): $(OBJ_STD)
	$(CC) $(CFLAGS) $(OBJ_STD) -DDEFAULT=1 -o $(NAME2)

####################################################################################################
########################################## Default Rules ###########################################
####################################################################################################

clean:
	rm -rf $(OBJ_STD) $(OBJ_FT)

fclean: clean
	rm -rf $(NAME) $(NAME2)

re: fclean all

.PHONY: all clean fclean re

####################################################################################################
####################################################################################################
####################################################################################################
